<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cmorgado.myfirstapp.MainActivity">

    <ImageView
        android:id="@+id/business_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/front_page"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:paddingTop="7dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/pe_ante_pe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:paddingLeft="7dp"
        android:textSize="10sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:text="Walking in Nature" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="CONTACT INFORMATION" />

        <TextView
            android:id="@+id/email_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:padding="5dp"
            android:background="#40FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="Email: cmorgado@stepbystep.com" />

        <TextView
            android:id="@+id/cellphone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:padding="5dp"
            android:background="#40FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="Phone nº: 0035191851873" />

        <TextView
            android:id="@+id/gps_coordinates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:padding="5dp"
            android:background="#40FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="GPS: 38.712175°, -9.146796°" />

    </LinearLayout>


    <ImageButton
        android:id="@+id/ImageButton01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_user"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/user_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ImageButton01"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:textSize="12sp"
        android:textColor="#DCDCDC"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:text="Log in" />

</RelativeLayout>
